<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
                            "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<validator type="requiredstring">
		<param name="fieldName">productId</param>
		<message>ProductId is required.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">productName</param>
		<message>ProductName is required.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">productCategory</param>
		<message>productCategory is required.</message>
	</validator>
	
	
	
	<field name="productPrice">
		<field-validator type="required">
				<message>productPrice is required.</message>
		</field-validator>
	
		<field-validator type="domainNameValidator">
			<message>productPrice must be bigger than 0.</message>
		</field-validator>
	
	</field>
	
	
	
</validators>